    "prettier.jsxBracketSameLine":true, 
    "prettier.arrowParens":"avoid",
    "diagnostic.virtualText": true,
    "diagnostic.virtualTextCurrentLineOnly": false,
    "diagnostic.virtualTextPrefix": "‚è∫ ",
